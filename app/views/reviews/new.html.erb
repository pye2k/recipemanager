<%= render "shared/page_title", title: "Write a new review" %>

<%= render "shared/errors", obj: @review %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @review, url: recipe_reviews_path do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :body %>
      <%= f.text_area :body, rows: 10 %>

      <%= f.submit "Submit Review", class: "btn-success" %>
    <% end %>
  </div>
</div>